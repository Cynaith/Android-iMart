<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_32">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:id="@+id/add_article_title_title">
        <TextView
            android:text="编写文章"
            android:textSize="21sp"
            android:textColor="#ff333333"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/add_article_title_inputtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_article_title_title"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_article_title_addtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_48"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_48"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入文章标题"
            android:maxLines="1"
            android:textColorHint="@color/color_666666"
            android:textSize="@dimen/dimen_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.3"
            android:layout_marginLeft="@dimen/dimen_48"
            android:layout_marginRight="@dimen/dimen_48"
            android:background="@color/guide_divider" />
    </LinearLayout>
    <TextView
        android:id="@+id/add_article_title_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="选择文章类型"
        android:layout_below="@id/add_article_title_inputtitle"
        android:maxLines="1"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/dimen_14"
        android:gravity="center|center_vertical|center_horizontal"
        >

    </TextView>
    <RadioGroup
        android:id="@+id/add_article_title_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/add_article_title_text">
        <RadioButton
            android:id="@+id/add_article_title_kind1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:clickable="true"
            android:text="创意生活"/>
        <RadioButton
            android:id="@+id/add_article_title_kind2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:clickable="true"
            android:text="办公用品"/>
        <RadioButton
            android:id="@+id/add_article_title_kind3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:clickable="true"
            android:text="家居设计"/>
        <RadioButton
            android:id="@+id/add_article_title_kind4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:clickable="true"
            android:text="工艺美术"/>
    </RadioGroup>
    <TextView
        android:id="@+id/add_article_title_goto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@id/add_article_title_radiogroup"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@drawable/common_btn_corner_seleced_text_color"
        android:clickable="true"
        android:textSize="@dimen/dimen_16"
        android:focusable="true" />
</RelativeLayout>