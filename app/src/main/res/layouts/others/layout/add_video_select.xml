<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_32">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:id="@+id/add_article_img_title">
        <TextView
            android:text="上传视频"
            android:textSize="21sp"
            android:textColor="#ff333333"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/add_video1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@id/add_article_img_title"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:layout_toLeftOf="@id/line"
        android:enabled="true"
        android:gravity="center"
        android:text="视频上传"
        android:textColor="@drawable/common_btn_corner_seleced_text_color"
        android:clickable="true"
        android:textSize="@dimen/dimen_16"
        android:focusable="true" />
    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/add_video2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@id/add_article_img_title"
        android:layout_toRightOf="@id/line"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="相册选择"
        android:textColor="@drawable/common_btn_corner_seleced_text_color"
        android:clickable="true"
        android:textSize="@dimen/dimen_16"
        android:focusable="true" />
    <LinearLayout
        android:id="@+id/add_video_imgview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/add_video1">
        <ImageView
            android:id="@+id/add_article_img_show"
            android:layout_width="@dimen/dimen_300"
            android:layout_height="@dimen/dimen_300"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="fitXY"
            >
        </ImageView>
    </LinearLayout>
    <TextView
        android:id="@+id/add_video_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@id/add_video_imgview"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@drawable/common_btn_corner_seleced_text_color"
        android:clickable="true"
        android:textSize="@dimen/dimen_16"
        android:focusable="true"
        android:layout_gravity="bottom"/>
</RelativeLayout>