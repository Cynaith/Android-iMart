<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:id="@+id/add_article_img_title">
        <TextView
            android:text="路线选择"
            android:textSize="21sp"
            android:textColor="#ff333333"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:id="@+id/init_walking_way"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@id/add_article_title_radiogroup"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="步行导航"
        android:textColor="@drawable/common_btn_corner_seleced_text_color"
        android:clickable="true"
        android:textSize="@dimen/dimen_16"
        android:focusable="true" />
    <TextView
        android:id="@+id/init_bus_way"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@id/add_article_title_radiogroup"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="公交导航"
        android:textColor="@drawable/common_btn_corner_seleced_text_color"
        android:clickable="true"
        android:textSize="@dimen/dimen_16"
        android:focusable="true" />
    <TextView
        android:id="@+id/init_car_way"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@id/add_article_title_radiogroup"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="行车导航"
        android:textColor="@drawable/common_btn_corner_seleced_text_color"
        android:clickable="true"
        android:textSize="@dimen/dimen_16"
        android:focusable="true" />
</LinearLayout>