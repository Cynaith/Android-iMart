<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:id="@+id/add_article_img_title">
        <TextView
            android:text="个人信息修改"
            android:textSize="21sp"
            android:textColor="#ff333333"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <com.ly.imart.util.MyImageView
        android:id="@+id/user_img_update"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="fitXY"
        android:background="@mipmap/waiting"
        >
    </com.ly.imart.util.MyImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:textColor="@color/facebook_secondary_color"
        android:text="用户姓名"/>
    <TextView
        android:id="@+id/user_name_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="输入姓名"
        android:maxLines="1"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/dimen_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.3"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@color/guide_divider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:textColor="@color/facebook_secondary_color"
        android:text="用户简介"/>
    <EditText
        android:id="@+id/user_show_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="输入简介"
        android:maxLines="1"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/dimen_14" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.3"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@color/guide_divider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:textColor="@color/facebook_secondary_color"
        android:text="年龄"/>
    <EditText
        android:id="@+id/user_age_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="年龄"
        android:maxLines="1"
        android:textColorHint="@color/color_666666"
        android:textSize="@dimen/dimen_14" />
    <TextView
        android:id="@+id/user_update_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@id/add_article_title_radiogroup"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_48"
        android:background="@drawable/common_btn_corner_seleced_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@drawable/common_btn_corner_seleced_text_color"
        android:clickable="true"
        android:textSize="@dimen/dimen_16"
        android:focusable="true" />

</LinearLayout>